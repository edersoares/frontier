{
    "name": "dex/frontier",
    "description": "The frontier between your Laravel app and your decoupled frontend",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eder Soares",
            "email": "edersoares@me.com",
            "homepage": "https://edersoares.me",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dex\\Laravel\\Frontier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dex\\Laravel\\Frontier\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest"
    },
    "scripts-descriptions": {
        "coverage": "Run code coverage",
        "format": "Format code",
        "test": "Run tests"
    },
    "require": {
        "guzzlehttp/guzzle": "^7",
        "illuminate/http": "^8|^9|^10",
        "illuminate/support": "^8|^9|^10",
        "illuminate/view": "^8|^9|^10"
    },
    "require-dev": {
        "orchestra/testbench": "^8.5",
        "laravel/pint": "^1.10",
        "pestphp/pest": "^2.6"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dex\\Laravel\\Frontier\\FrontierServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
